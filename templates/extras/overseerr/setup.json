{
  "name": "extras/overseerr",
  "description": "Overseerr setup configuration",
  "steps": [
    {
      "action": "wait_for_service",
      "description": "Wait for Overseerr to be ready",
      "params": {
        "service": "overseerr",
        "port": 5055,
        "timeout": 120
      }
    },
    {
      "action": "log_info",
      "description": "Display Overseerr setup instructions",
      "params": {
        "message": "Overseerr is ready at http://${SERVER_IP}:5055"
      }
    },
    {
      "action": "log_info",
      "description": "Display API keys for Overseerr configuration",
      "params": {
        "message": "API Keys for Overseerr setup:\n   • Radarr API Key: ${RADARR_API_KEY}\n   • Sonarr API Key: ${SONARR_API_KEY}"
      }
    },
    {
      "action": "log_info",
      "description": "Display post-install guide reference",
      "params": {
        "message": "Follow the detailed setup guide: ${ROOT_DIR}/docker/POST-INSTALL.md"
      }
    }
  ]
}
