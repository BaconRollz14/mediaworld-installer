{
  "service": "overseerr",
  "description": "Overseerr - Request Management",
  "compose_file": "overseerr.yml",
  "setup": {
    "steps": [
      {
        "action": "wait_for_service",
        "description": "Waiting for Overseerr to be ready",
        "params": {
          "service": "overseerr",
          "port": 5055,
          "timeout": 120
        }
      },
      {
        "action": "log_info",
        "description": "Overseerr access info",
        "params": {
          "message": "Overseerr: http://${SERVER_IP}:5055"
        }
      },
      {
        "action": "log_info",
        "description": "Display API keys",
        "params": {
          "message": "API Keys for Overseerr setup:\n   • Radarr: ${RADARR_API_KEY}\n   • Sonarr: ${SONARR_API_KEY}"
        }
      },
      {
        "action": "log_info",
        "description": "Setup guide reference",
        "params": {
          "message": "Follow setup guide: ${ROOT_DIR}/docker/POST-INSTALL.md"
        }
      }
    ]
  }
}
